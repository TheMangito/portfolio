---
export interface Props {
  rutaImagen: string;
  nombreProyecto: string;
  descripcion?: string;
  className?: string;
  isLarge?: boolean;
}

const { rutaImagen, nombreProyecto, descripcion, className = "" } = Astro.props;
---


<div
  class={`bg-background-grid rounded-xl shadow-background-accent border border-background-accent transition-all duration-300 h-full flex hover:shadow-md hover:scale-x-[101%] hover:scale-y-[102%] animate-[scale_1.05] ${className}`}
>
  <div class="flex-col h-full items-center max-w-1/2 p-2 gap-12 justify-center max-h-2/3">
    <img
      src={rutaImagen}
      alt={nombreProyecto}
      class="w-full h-full object-contain"
    />
    <div class="pt-3">
      <h3 class="font-semibold text-secondary text-center text-2xl">
        {nombreProyecto}
    </h3>
    </div>
    
  </div>
  <div class="flex flex-col justify-end pb-10 gap-8 flex-1 h-full pl-2">
    
    <slot name="tecnologias" />
    <div class=" text-secondary">
      <p class="text-sm text-secondary/85">
        {descripcion}
      </p>
    </div>
  </div>
</div>
