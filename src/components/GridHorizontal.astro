---
export interface Props {
  rutaImagen: string;
  nombreProyecto: string;
  descripcion?: string;
  className?: string;
  isLarge?: boolean;
}

const { rutaImagen, nombreProyecto, descripcion, className = "" } = Astro.props;
---

<div
  class={`bg-background-grid rounded-xl p-2 shadow-background-accent border border-background-accent transition-all duration-300 h-full flex hover:shadow-md hover:scale-x-[101%] hover:scale-y-[102%] animate-[scale_1.05] ${className}`}
>
  <div class="flex-col items-center justify-center min-h-32 p-4">
    <img
      src={rutaImagen}
      alt={nombreProyecto}
      class="w-full h-full object-contain"
    />
  </div>
  <div class="flex flex-col justify-center flex-1 h-full pl-2">
    <div class="pb-4 flex gap-5 items-center">
      <h3 class="font-semibold text-secondary text-2xl">
        {nombreProyecto}
      </h3>

      <slot name="tecnologias" />
    </div>
    <div class=" text-secondary pr-8">
      <p class="text-sm text-secondary/85">
        {descripcion}
      </p>
    </div>
  </div>
</div>
